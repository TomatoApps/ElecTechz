<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/vacancyContainer"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vacancyPosition"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vacancyCategory"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/vacancyPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vacancyLocation"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@+id/vacancyCategory"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vacancySalary"
            android:textSize="15dp"
            android:gravity="end"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@+id/vacancyCategory"
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>